<div class="container py-3 px-md-5"> <!-- Increase padding on larger screens -->
  <div class="card-body text-start d-flex flex-wrap align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <div class="ms-3">
        <p class="nav-link active" aria-current="page">
          Username: <%= current_user ? current_user.username : '' %>
        </p>
        <p class="nav-link active" aria-current="page">
          Email: <%= current_user ? current_user.email : '' %>
        </p>
        <p class="nav-link active" aria-current="page">
          Coins: <%= current_user ? current_user.coins : '' %>
        </p>
      </div>
    </div>

    <div class="w-100 m-3">
      <div class="d-flex justify-content-center">
        <%= link_to "Cash In Now", "#", class: "btn btn-primary w-100" %>
      </div>
      <div class="d-flex justify-content-center gap-1 mt-2">
        <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary w-50" %>
        <a href="#" class="btn btn-primary w-50">Address</a>
      </div>
    </div>
  </div>
</div>
