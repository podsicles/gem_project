<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;

        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-black text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <!--navs-->
            <!--                <div class="mb-md-5 mt-md-4">-->
            <!--                  <h2 class="fw-bold mb-2 text-uppercase">Login</h2>-->
            <!--                  <p class="text-white-50 mb-5">Please enter your email and password</p>-->
            <!--                </div>-->
            <!--                <div class="mb-md-5 mt-md-4">-->
            <!--                  <h2 class="fw-bold mb-2 text-uppercase">Sign up</h2>-->
            <!--                  <p class="text-white-50 mb-5">Please enter your email and password</p>-->
            <!--                </div>-->
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="active btn btn-outline-light btn-lg px-5 mb-5" id="tab-login" data-mdb-toggle="pill" data-toggle="tab" href="#pills-login" role="tab"
                   aria-controls="pills-login" aria-selected="true">Login</a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="btn btn-outline-light btn-lg px-5 mb-5" id="tab-register" data-mdb-toggle="pill" data-toggle="tab" href="#pills-register" role="tab"
                   aria-controls="pills-register" aria-selected="false">Register</a>
              </li>
            </ul>
            <!--            navs-->
            <div class="tab-content">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                  <div class="field form-outline form-white mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
                    <%= f.label :email, class: 'form-label' %>
                  </div>

                  <div class="field form-outline form-white">
                    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
                    <%= f.label :password, class: 'form-label' %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field form-switch">
                      <%= f.check_box :remember_me, class: 'form-check-input' %>
                      <%= f.label :remember_me, class: 'mb-3 small pb-lg-2 form-check-label text-white-50 float-left' %>
                    </div>
                  <% end %>

                  <div class="actions">
                    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg px-5 mb-5" %>
                  </div>

                  <div>
                    <p class="mb-0">No account
                      yet? <%= link_to 'Sign up here', new_user_registration_path, class: "text-white-50 fw-bold" %></p>
                  </div>
                </div>
              <% end %>

              <!--            register-->
              <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource, class: "text-white-50 mb-5" %>
                  <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                    <div class="field form-outline form-white">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
                      <%= f.label :email, class: 'form-label' %><br/>
                    </div>

                    <div>
                      <%= f.text_field :username, autofocus: true, class: 'form-control form-control-lg' %>
                      <%= f.label :username, class: 'form-label' %><br/>
                    </div>

                    <div class="field form-outline form-white">
                      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                      <%= f.label :password, class: 'form-label' %>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br/>
                    </div>

                    <div class="field">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                      <%= f.label :password_confirmation, class: 'form-label mb-5' %><br/>
                    </div>

                    <div class="actions">
                      <%= f.submit "Register", class: "btn btn-outline-light btn-lg px-5 mb-2" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>